#!/bin/sh

if [ ! -f $HOME/.efterc ]
then
    # Is there a .efte/mymain.fte ?  If not, create it.
    if [ ! -f $HOME/.efte/mymain.fte ]
    then
        if [ ! -d $HOME/.efte ]
        then
            mkdir $HOME/.efte
        fi
    	cp @@CONFIGDIR@@/mymain.fte $HOME/.efte/mymain.fte
    fi
    (cd @@CONFIGDIR@@; @@BINDIR@@/cefte mymain.fte $HOME/.efterc) || exit 1
fi

exec @@BINDIR@@/xefte "$@"
