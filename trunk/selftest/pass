
sub dot33 {                    # ( n -- ) print as nnn:nnn
   lesshash                    
   bl hold
   3:hash
   push ':' hold
   3:hash
   hashmoretype
}

sub dot9r { push 9 dotr }      # ( n -- ) space padded right aligned 9 chars signed number out

sub pass   {
   tor dup2 equals if          insertstring "PASS"
   else                        insertstring "FAIL"
   endif 
   rfrom insertstring " test " dot33
   insertstring "wants"        dot9r
   insertstring ", got"        dot9r
   cr
}

sub accumulate { push 10 mul plus }
